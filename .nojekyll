# Create .nojekyll file
touch .nojekyll

# Ensure icons are in public/icons/
mkdir -p public/icons
curl -s -o public/icons/icon-192x192.png "https://via.placeholder.com/192/2E7D32/ffffff?text=CH"
curl -s -o public/icons/icon-512x512.png "https://via.placeholder.com/512/2E7D32/ffffff?text=CH"

# Update manifest with correct path
cat > public/manifest.json << 'EOF'
{
  "name": "Chaguo Tanzania",
  "short_name": "Chaguo",
  "description": "Internet Freedom for Tanzania",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#2E7D32",
  "theme_color": "#2E7D32",
  "icons": [
    {
      "src": "public/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "public/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ]
}
EOF

echo "âœ… .nojekyll created. Commit and push."
